/* 弹窗 */
.zan-dialog__mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 10;
  background:black;
  opacity:0.5;
  display: none;
}

.zan-dialog__container {
  position: fixed;
  bottom: 400rpx;
  width: 600rpx;
  height:500rpx;
  margin-left: 72rpx;
  background: #f8f8f8;
  transform: translateY(300%);
  transition: all 0.4s ease;
  z-index: 12;
  /* border-radius: 20rpx; */
  /* box-shadow: 0px 3px 3px 2px gainsboro; */
}

.zan-dialog--show .zan-dialog__container {
  transform: translateX(0);
}

.zan-dialog--show .zan-dialog__mask {
  display: block;
}
